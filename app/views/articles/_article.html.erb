<div id="<%= dom_id article %>" class="bg-gray-800 text-white m-2 rounded-md">
  <h4 class="text-lg font-bold m-2">
    <%= link_to article.title, article %>
    <% if article.owned_by? current_user %>
      <span class="actions">
        <%= link_to 'Edit', edit_article_path(article), class: "text-base rounded-lg ml-2 px-2 inline-block font-medium text-white underline" %>
      </span>
    <% end %>
  </h4> 
  
  <div class="m-2">
    <%= truncate(article.body, length: 200) %>
    <%= link_to 'Read more', article_path(article), class: "text-gray-400" %>
  </div>
</div>

<%= form_with(model: @article.comments.new, url: article_comments_path(@article), local: true) do |form| %>
  <div class="field text-white">
    <%= form.label :comment %> as <%= current_user.username %>
    <br>
    <%= form.text_field :body, class: "text-black"%>
  </div>
  <div class="actions">
    <%= form.submit 'Add', class: "ml-2 rounded-lg py-3 px-5 bg-gray-100" %>
  </div>
<% end %>
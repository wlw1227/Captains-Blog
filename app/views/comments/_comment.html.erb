<div class="comment text-white bg-gray-800 mb-1 rounded-md">
  <h3 class="ml-1">
    <%= User.find(comment.user_id).username %><%= comment.name %>
    said:
    <% if comment.user_id == current_user %>
      <span class="actions">
        <%= button_to 'Delete', article_comment_path(article_id: @article, id: comment), confirm: 'Are you sure?', method: :delete, class: "rounded-lg ml-2 px-2 inline-block font-medium text-white border-2 border-white" %>
      </span>
    <% end %>
  </h3>
  <div class="ml-4 m-1">
    <%= comment.body %>
  </div>
</div>